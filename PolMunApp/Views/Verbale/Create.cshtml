@model PoliziaMunicipaleApp.Models.Verbale

@{
    ViewData["Title"] = "Aggiungi Verbale";
}

<h2>@ViewData["Title"]</h2>

<h4>Verbale</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TrasgressoreID" class="control-label"></label>
        <select asp-for="TrasgressoreID" class="form-control" asp-items="@(new SelectList(ViewBag.Trasgressori, "Id", "Nome"))">
            <option value="">Seleziona Trasgressore</option>
        </select>
        <span asp-validation-for="TrasgressoreID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ViolazioneID" class="control-label"></label>
        <select asp-for="ViolazioneID" class="form-control" asp-items="@(new SelectList(ViewBag.Violazioni, "Id", "Descrizione"))">
            <option value="">Seleziona Violazione</option>
        </select>
        <span asp-validation-for="ViolazioneID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataViolazione" class="control-label"></label>
        <input asp-for="DataViolazione" class="form-control" type="date" />
        <span asp-validation-for="DataViolazione" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Aggiungi</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Annulla</a>
</form>
